{
    "extends": "airbnb-base",
    "rules": {
        "max-len": ["error", { "code": 200 }],
        "class-methods-use-this": 0,
        "mocha/no-exclusive-tests": "error",
        "no-console": 1
    },
    "globals": {
        "window": true,
        "document": true
    },
    "env": {
        "node": true,
        "browser": true,
        "es6": true,
        "mocha": true
    },
    "plugins": [
        "mocha"
    ]
}